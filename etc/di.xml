<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="hawkSearchVirtualLogHandlerReport" type="AmericanEagle\Common\Model\DbLogger">
        <arguments>
            <argument name="source" xsi:type="string">HawksearchReport</argument>
            <argument name="level" xsi:type="const">Monolog\Logger::INFO</argument>
        </arguments>
    </virtualType>
    <virtualType name="hawkSearchVirtualLogHandlerDebug" type="AmericanEagle\Common\Model\DbLogger">
        <arguments>
            <argument name="source" xsi:type="string">HawksearchDebug</argument>
            <argument name="level" xsi:type="const">Monolog\Logger::DEBUG</argument>
        </arguments>
    </virtualType>
    <virtualType name="hawkSearchVirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">hawkSearchVirtualLogHandlerDebug</item>
                <item name="report" xsi:type="object">hawkSearchVirtualLogHandlerReport</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="hawkSearchVirtualContext" type="Magento\Framework\App\Helper\Context">
        <arguments>
            <argument name="logger" xsi:type="object">hawkSearchVirtualLogger</argument>
        </arguments>
    </virtualType>
    <type name="HawkSearch\Datafeed\Helper\Data">
        <arguments>
            <argument name="context" xsi:type="object">hawkSearchVirtualContext</argument>
        </arguments>
    </type>
    <type name="HawkSearch\Datafeed\Model\Datafeed">
        <arguments>
            <argument name="generators" xsi:type="array">
                <item name="content_generator" xsi:type="object">HawkSearch\Datafeed\Model\Generator\Content</item>
            </argument>
        </arguments>
    </type>
</config>
