<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="run_hawksearch_datafeed" xsi:type="object">HawkSearch\Datafeed\Console\Command\DataFeed</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="hawkSearchVirtualLogHandler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="filePath" xsi:type="string">var/log/hawksearch_datafeed.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="hawkSearchVirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="report" xsi:type="object">hawkSearchVirtualLogHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="hawkSearchVirtualContext" type="Magento\Framework\App\Helper\Context">
        <arguments>
            <argument name="logger" xsi:type="object">hawkSearchVirtualLogger</argument>
        </arguments>
    </virtualType>
    <type name="HawkSearch\Datafeed\Helper\Data">
        <arguments>
            <argument name="context" xsi:type="object">hawkSearchVirtualContext</argument>
        </arguments>
    </type>
</config>
