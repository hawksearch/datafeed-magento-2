/**
 * Cache template
 *
 * @var $block \HawkSearch\Datafeed\Block\System\Config\Cachebutton
 */
    $locked = $block->isFeedLocked();
?>
<div>
    <div id="hawk_imagecachegen_result" class="message-validation hidden"></div>
    <button type="button"
            id="<?=  /* @noEscape */ $block->getHtmlId() ?>">
        <span><?=  /* @noEscape */ $block->escapeHtml($block->getButtonLabel()); ?></span>
    </button>
    <input type="checkbox"
           value="imageforce"
           id="<?=  /* @noEscape */ $block->getHtmlId() ?>_imageforce"
           name="imageforce"
           title="force image cache generation"/> force
</div>
<script>
    require(['prototype'], function() {
        var locked = <?=  /* @noEscape */ $locked ? 'true' : 'false'; ?>;
        var b = $('<?=  /* @noEscape */ $block->getHtmlId() ?>');
        var cb = $('<?=  /* @noEscape */ $block->getHtmlId() ?>_imageforce');
        if(locked) {
            b.disable();
            cb.enable();
            cb.observe('click', function(event) {
                if(this.checked) {
                    b.enable();
                } else {
                    b.disable();
                }
            });
        } else {
            b.enable();
            cb.disable();
        }

        b.observe('click', function(event) {
            var isForce = cb.checked;
            new Ajax.Request('<?=  /* @noEscape */ $block->getGenerateUrl(); ?>', {
                parameters: {force: isForce},
                onSuccess: function (transport) {
                    var response = transport.responseText.evalJSON();
                    var responseEl = $("hawk_imagecachegen_result");
                    if (response.error) {
                        responseEl.innerHTML = response.error;
                    } else {
                        responseEl.innerHTML = "Image cache generation started";
                    }
                    responseEl.removeClassName('hidden');

                    b.disabled = true;
                    b.addClassName("disabled");
                    b.stopObserving('click');
                },
                onFailure: function (response, rHeader) {
                    alert('There has been an error. The response is: ' + response);
                    b.addClassName("disabled");
                    b.stopObserving('click');
                },
                onException: function (request, exception) {
                    alert('There has been an exception. The exceptions is: ' + exception);
                    b.addClassName("disabled");
                    b.stopObserving('click');
                }
            });
        });
    });
</script>
